<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="@dimen/corner_radius_4"
    android:layout_margin="@dimen/spacing_small_8"
    card_view:cardBackgroundColor="@color/colorBlueGrey"
    card_view:cardElevation="@dimen/spacing_small_8"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ai_iv"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_album_size_128"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/spacing_small_8"
            tools:src="@drawable/man"
            />
        <TextView
            android:id="@+id/ai_tv_album_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_large_24"
            android:textStyle="bold"
            android:elegantTextHeight="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ai_iv"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/spacing_small_8"
            tools:text="Album name"
            />
        <TextView
            android:id="@+id/ai_tv_artist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal_16"
            android:textColor="@color/colorTexGrey"
            android:lines="1"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ai_tv_album_name"
            app:layout_constraintStart_toEndOf="@id/ai_iv"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/spacing_small_8"
            tools:text="Artist name"
            />
        <TextView
            android:id="@+id/ai_tv_genre_name_and_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal_16"
            android:textColor="@color/colorTexGrey"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@id/ai_tv_artist_name"
            app:layout_constraintStart_toEndOf="@id/ai_iv"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/spacing_small_8"
            tools:text="Rock, 1995"/>

    </android.support.constraint.ConstraintLayout>

</androidx.cardview.widget.CardView>